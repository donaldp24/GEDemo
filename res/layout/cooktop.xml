			android:layout_width="194px"
			android:layout_height="46px"
			android:background="@drawable/welcome_application"
			/>
	<ImageView
			android:layout_marginLeft="337px"
			android:layout_marginTop="214px"
			android:layout_width="577px"
			android:layout_height="84px"
			android:background="@drawable/cooktop_title"
			/>

	<!-- buttons -->
	<Button
			android:id="@+id/btn_works"
			android:layout_marginLeft="255px"
			android:layout_marginTop="440px"
			android:layout_width="192px"
			android:layout_height="169px"
			android:background="@drawable/cooktop_btn_works"
			/>

	<Button
			android:id="@+id/btn_cooking"
			android:layout_marginLeft="543px"
			android:layout_marginTop="440px"
			android:layout_width="192px"
			android:layout_height="169px"
			android:background="@drawable/cooktop_btn_cooking"
			/>

	<Button
			android:id="@+id/btn_response"
			android:layout_marginLeft="823px"
			android:layout_marginTop="440px"
			android:layout_width="192px"
			android:layout_height="169px"
			android:background="@drawable/cooktop_btn_response"
			/>

	<ImageView
			android:layout_marginLeft="234px"
			android:layout_marginTop="606px"
			android:layout_width="762px"
			android:layout_height="57px"
			android:background="@drawable/cooktop_exps"
			/>

	<Button
			android:id="@+id/btn_back"
			android:layout_marginLeft="13px"
			android:layout_marginTop="568px"
			android:layout_width="159px"
			android:layout_height="123px"
			android:background="@drawable/common_btn_back"
			/>

</RelativeLayout>

