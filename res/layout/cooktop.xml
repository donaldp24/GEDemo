<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/layout_cooktop"
			  android:orientation="vertical"
			  android:layout_width="1280px"
			  android:layout_height="720px"
			  android:background="@drawable/common_bg"
		>
	<ImageView
			android:layout_marginLeft="33px"
			android:layout_marginTop="362px"
			android:layout_width="1213px"
			android:layout_height="329px"
			android:background="@drawable/refrigerator_focusbg"
			/>
	<ImageView
			android:layout_marginLeft="66px"
			android:layout_marginTop="48px"
			android:layout_width="237px"
			android:layout_height="115px"
			android:background="@drawable/welcome_mark"
			/>
	<ImageView
			android:layout_marginLeft="849px"
			android:layout_marginTop="38px"
			android:layout_width="124px"
			android:layout_height="125px"
			android:background="@drawable/welcome_appmark"
			/>
	<ImageView
