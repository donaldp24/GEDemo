<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.general.mediaplayer.GEDemo"
		  android:versionCode="1"
		  android:versionName="1.0"
		  android:largeHeap="true"
		>

	<uses-sdk android:minSdkVersion="15"/>

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


	<application android:label="@string/app_name" android:icon="@drawable/ic_launcher">

		<activity android:name="ScanMediaActivity"
				  android:label="@string/app_name"
				  android:launchMode="singleInstance"
				  android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
				  android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden"
				>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".RefrigeratorActivity"
				  android:label="@string/app_name"
				  android:launchMode="singleInstance"
				  android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
				  android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden"
				/>
		<activity android:name=".DishwasherActivity"
				  android:label="@string/app_name"
				  android:launchMode="singleInstance"
				  android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
				  android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden"
				/>
		<activity android:name=".WallovenActivity"
				  android:label="@string/app_name"
				  android:launchMode="singleInstance"
				  android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
				  android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden"
				/>
		<activity android:name=".CooktopActivity"
				  android:label="@string/app_name"
				  android:launchMode="singleInstance"
				  android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
				  android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden"
				/>
		<activity android:name=".VideoActivity"
				  android:label="@string/app_name"
				  android:launchMode="singleInstance"
				  android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
				  android:screenOrientation="landscape" android:configChanges="orientation|keyboardHidden"
				/>

	</application>


</manifest>
